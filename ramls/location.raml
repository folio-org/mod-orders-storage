#%RAML 1.0
title: "Orders Storage"
baseUri: http://github.com/org/folio/mod-orders-storage
version: v1

documentation:
  - title: Locations
    content: <b>CRUD API</b>

types:
    location: !include acq-models/mod-orders-storage/schemas/location.json
    location_collection: !include acq-models/mod-orders-storage/schemas/location_collection.json
    UUID:
     type: string
     pattern: ^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$

traits:
    orderable: !include raml-util/traits/orderable.raml
    pageable:  !include raml-util/traits/pageable.raml
    searchable: !include raml-util/traits/searchable.raml
    language: !include raml-util/traits/language.raml

resourceTypes:
    collection: !include raml-util/rtypes/collection.raml
    collection-item: !include raml-util/rtypes/item-collection.raml

/location:
  type:
    collection:
      exampleCollection: !include acq-models/mod-orders-storage/examples/location_collection.sample
      exampleItem: !include acq-models/mod-orders-storage/examples/location_post.sample
      schemaCollection: location_collection
      schemaItem: location
  get:
    description: Get list of locations
    is: [
      searchable: {description: "with valid searchable fields: for example code", example: "[\"code\", \"MEDGRANT\", \"=\"]"},
      pageable
    ]
  /{id}:
    uriParameters:
      id:
        description: The UUID of a Location
        type: UUID
    type:
      collection-item:
        exampleItem: !include acq-models/mod-orders-storage/examples/location_get.sample
        schema: location
