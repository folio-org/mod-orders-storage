#%RAML 0.8
title: "Sample-Module"
baseUri: http://github.com/org/folio/sample-module
version: v1

documentation:
  - title: Sample Module
    content: <b>CRUD API</b>

schemas:
  - changelog: !include schemas/changelog.json
  - purchase_order.json: !include schemas/purchase_order.json
  - purchase_order_collection.json: !include schemas/purchase_order_collection.json

traits:
  - secured: !include raml-util/traits/auth.raml
  - orderable: !include raml-util/traits/orderable.raml
  - pageable:  !include raml-util/traits/pageable.raml
  - searchable: !include raml-util/traits/searchable.raml
  - language: !include raml-util/traits/language.raml

resourceTypes:
  - collection: !include raml-util/rtypes/collection.raml
  - collection-item: !include raml-util/rtypes/item-collection.raml

/purchase_order:
  type:
    collection:
      exampleCollection: !include examples/purchase_order_collection.sample
      exampleItem: !include examples/purchase_order_post.sample
      schemaCollection: purchase_order_collection.json
      schemaItem: purchase_order.json
  get:
    description: Get list of purchase orders
    is: [
      searchable: {description: "with valid searchable fields: for example code", example: "[\"code\", \"MEDGRANT\", \"=\"]"},
      orderable: {fieldsList: "field A, field B"},
      pageable
    ]
  /{purchase_order_id}:
    type:
      collection-item:
        exampleItem: !include examples/purchase_order_get.sample
        schema: purchase_order.json

